{
  "compilerOptions": {
    "lib": ["DOM"],
    "module": "ESNext",
    "target": "ES6",
    "jsx": "react",
    "moduleResolution": "bundler",
    "baseUrl": "src",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "paths": {
      "app/*": ["app/*"],
      "entities/*": ["entities/*"],
      "features/*": ["features/*"],
      "pages/*": ["pages/*"],
      "shared/*": ["shared/*"],
      "widgets/*": ["widgets/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "Global.d.ts"],
  "exclude": ["node_modules", "eslint.config.js"]
}
